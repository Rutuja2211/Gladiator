@model FirstMVCApplication.Models.Employee
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
<table>
    <tr>
        <td>Employee ID</td>
        <td>@Html.TextBoxFor(z => z.Id)</td>
    </tr>

    <tr>
        <td>Employee Name</td>
        <td>@Html.TextBoxFor(y => y.Name)</td>
    </tr>

    <tr>
        <td>Employee Age</td>
        <td>@Html.TextBoxFor(x => x.Age)</td>
    </tr>
</table>
    <input type="submit" value="Add Employee" />

}


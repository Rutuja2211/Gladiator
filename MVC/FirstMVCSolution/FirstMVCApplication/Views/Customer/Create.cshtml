@model FirstMVCApplication.Models.Customer
@{
    ViewBag.Title = "Create";
}

<h2>Add a Customer</h2>

@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    <table>
        <tr>
            <td>Customer ID : </td>
            <td>@Html.TextBoxFor(z => z.Id)</td>
        </tr>

        <tr>
            <td>Customer Name : </td>
            <td>@Html.TextBoxFor(z => z.Name)</td>
        </tr>

        <tr>
            <td>Customer Age : </td>
            <td>@Html.TextBoxFor(z => z.Age)</td>
        </tr>

        <tr>
            <td>Customer Phone : </td>
            <td>@Html.TextBoxFor(z => z.Phone)</td>
        </tr>

    </table>
    <br>
    <input type="submit" value="Create" />
}